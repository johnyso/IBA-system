<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"

              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              tools:context="de.ibs.app.speaker.SpeakerAcitvity">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/hintergrund_speaker"
            android:id="@+id/hintergrund_speaker"
            android:scaleType="matrix" />

    <ImageButton android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/links"
                 android:id="@+id/button_left"
                 android:layout_marginTop="135dp"
                 android:layout_marginLeft="15dp"
                 style="@style/ActionBar.Transparent.Apptheme"
            />

    <ImageButton android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="135dp"
                 android:layout_marginLeft="228dp"
                 android:src="@drawable/rechts"
                 android:id="@+id/button_right"
                 style="@style/ActionBar.Transparent.Apptheme"
            />

    <ImageButton android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="242dp"
                 android:layout_centerHorizontal="true"
                 android:src="@drawable/unten"
                 android:id="@+id/button_down"
                 style="@style/ActionBar.Transparent.Apptheme"
            />

    <ImageButton android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="30dp"
                 android:layout_centerHorizontal="true"
                 android:src="@drawable/oben"
                 android:id="@+id/button_up"
                 style="@style/ActionBar.Transparent.Apptheme"
            />


    <ImageButton android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="430dp"
                 android:layout_centerHorizontal="true"
                 android:src="@drawable/pos_zuruecksetzen"
                 android:id="@+id/pos_zuruecksetzen"
                 style="@style/ActionBar.Transparent.Apptheme"
            />


</RelativeLayout>
